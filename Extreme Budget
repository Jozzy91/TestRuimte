<script>  
var onderdelenlijst = ["Processor", "Moederbord", "Videokaart", "Opslag", "Geheugen", "Behuizing", "Voeding", "Dvdspeler", "Geluidskaart"];  
 
 
var indexonderdelenlijst = onderdelenlijst.length;  
 
 
$(".dropdown-menu li a").click(function() {    
    $(this).closest('.btn-group').find('.btn').text($(this).text()).append(" <span class='caret'>");    
});     
     
var app = angular.module('myApp', ['ngAnimate']);               
app.controller('onderdelenCtrl', function($scope) {  
i=0;  
while (i < indexonderdelenlijst) {  
i++;  
$scope['spec'+i] = true; 
$scope.togglespec = function(index) {                
$scope['spec'+index] =! $scope['spec'+index]; }           
}  
});           
       
var response = {       
    
"Processor":[       
{       
"Processor": 
{       
"Onderdeel":"Intel Core i7 4790",       
"foto":"http://images.skillbooks.de/image300/145723.jpeg",       
"prijs":"€319,00",       
"specificaties":"wut"       
}       
},       
{       
"Processor":       
{       
"Onderdeel":"Onderdeel 1.2",       
"foto":"http://content.hwigroup.net/images/articles/windows7.png",       
"prijs":"€30",       
"specificaties":"<b>lol</b>"       
}       
}      
],      
 
"Moederbord":[      
{       
"Moederbord":       
{       
"Onderdeel":"ASRock B85 Pro4",       
"foto":"http://www.subitopc.it/wp-content/uploads/2015/02/B85-Pro44-600x600.jpg",       
"prijs":"€74,90", 
"specificaties":"lol"
}       
}       
],      
 
"Videokaart":[       
{       
"Videokaart":     
{       
"Onderdeel":"GeForce GTX 750",       
"foto":"http://titan-ice.co.za/images/detailed/14/NE5X750S1301.jpg",       
"prijs":"€50",       
"specificaties":"wuut"       
}       
},       
{       
"Videokaart":       
{       
"Onderdeel":"Onderdeel 3.2",       
"foto":"http://content.hwigroup.net/images/articles/windows7.png",       
"prijs":"€60",       
"specificaties":"<b>lool</b>"       
}       
}      
],  
 
"Opslag":[  
{  
"Opslag":  
{       
"Onderdeel":"Onderdeel 4.1",       
"foto":"http://www.w3schools.com/html/pic_html5.gif",       
"prijs":"€20",       
"specificaties":"wutt"       
}  
},  
{  
"Opslag":  
{       
"Onderdeel":"Onderdeel 4.2",       
"foto":"http://content.hwigroup.net/images/articles/windows7.png",       
"prijs":"€30",       
"specificaties":"wwut"       
}  
}  
] 
};       
 
for (var i = 0, len1 = response.Processor.length; i < len1; i++) {       
j=i+1;     
var Processor = response.Processor[i].Processor.Onderdeel; 
$('#onderdeelnaam1').html("Processor"); 
$('#onderdeel1').html(response.Processor[0].Processor.Onderdeel + " <span class='caret'></span>");     
$('#onderdeel1-' + j).text(Processor);     
$("#meerspec1").html(response.Processor[0].Processor.specificaties);   
$("#prijs1").html(response.Processor[0].Processor.prijs);   
$("#foto1").attr("src",response.Processor[0].Processor.foto);  
}       
     
for (var i = 0, len2 = response.Moederbord.length; i < len2; i++) {       
j=i+1;     
var Moederbord = response.Moederbord[i].Moederbord.Onderdeel; 
$('#onderdeelnaam2').html("Moederbord"); 
$('#onderdeel2').html(response.Moederbord[0].Moederbord.Onderdeel + " <span class='caret'></span>");     
$('#onderdeel2-' + j).text(Moederbord);     
$("#meerspec2").html(response.Moederbord[0].Moederbord.specificaties);   
$("#prijs2").html(response.Moederbord[0].Moederbord.prijs);   
$("#foto2").attr("src",response.Moederbord[0].Moederbord.foto);  
}       
 
for (var i = 0, len3 = response.Videokaart.length; i < len3; i++) {       
j=i+1;     
var Videokaart = response.Videokaart[i].Videokaart.Onderdeel;   
$('#onderdeelnaam3').html("Videokaart");     
$('#onderdeel3').html(response.Videokaart[0].Videokaart.Onderdeel + " <span class='caret'></span>");     
$('#onderdeel3-' + j).text(Videokaart);     
$("#meerspec3").html(response.Videokaart[0].Videokaart.specificaties);   
$("#prijs3").html(response.Videokaart[0].Videokaart.prijs);  
$("#foto3").attr("src",response.Videokaart[0].Videokaart.foto);      
}  
 
for (var i = 0, len4 = response.Opslag.length; i < len4; i++) {       
j=i+1;     
var Opslag = response.Opslag[i].Opslag.Onderdeel; 
$('#onderdeelnaam4').html("Opslag");  
$('#onderdeel4').html(response.Opslag[0].Opslag.Onderdeel + " <span class='caret'></span>");     
$('#onderdeel4-' + j).text(Opslag);     
$("#meerspec4").html(response.Opslag[0].Opslag.specificaties);   
$("#prijs4").html(response.Opslag[0].Opslag.prijs);  
$("#foto4").attr("src",response.Opslag[0].Opslag.foto);      
}     
          
$( "#onderdeel1-1" ).click(function() {         
$("#meerspec1").html(response.Processor[0].Processor.specificaties);   
$("#prijs1").html(response.Processor[0].Processor.prijs);  
$("#foto1").attr("src",response.Processor[0].Processor.foto);});     
       
$( "#onderdeel1-2" ).click(function() {         
$("#meerspec1").html(response.Processor[1].Processor.specificaties);   
$("#prijs1").html(response.Processor[1].Processor.prijs);  
$("#foto1").attr("src",response.Processor[1].Processor.foto);});         
 
$( "#onderdeel3-1" ).click(function() {         
$("#meerspec3").html(response.Videokaart[0].Videokaart.specificaties);   
$("#prijs3").html(response.Videokaart[0].Videokaart.prijs);  
$("#foto3").attr("src",response.Videokaart[0].Videokaart.foto);});   
 
$( "#onderdeel3-2" ).click(function() {   
$("#meerspec3").html(response.Videokaart[1].Videokaart.specificaties);   
$("#prijs3").html(response.Videokaart[1].Videokaart.prijs);  
$("#foto3").attr("src",response.Videokaart[1].Videokaart.foto);});  
 
$( "#onderdeel4-1" ).click(function() {         
$("#meerspec4").html(response.Opslag[0].Opslag.specificaties);   
$("#prijs4").html(response.Opslag[0].Opslag.prijs);  
$("#foto4").attr("src",response.Opslag[0].Opslag.foto);});   
 
$( "#onderdeel4-2" ).click(function() {   
$("#meerspec4").html(response.Opslag[1].Opslag.specificaties);   
$("#prijs4").html(response.Opslag[1].Opslag.prijs);  
$("#foto4").attr("src",response.Opslag[1].Opslag.foto);});    
